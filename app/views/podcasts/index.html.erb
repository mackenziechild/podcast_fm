<div id="banner" class="podcasts_banner">
	<h1>Discover your new favorite podcast</h1>
</div>

<div id="podcasts" class="cf">
	<div class="wrapper">
		<ul class="cf">
			<% @podcasts.each do |podcast| %>
				<%= link_to podcast do %>
					<li>
						<%= image_tag podcast.thumbnail.url(:medium) %>
						<div class="podcast_overview">
							<h2><%= podcast.title %></h2>
							<p class="episode_count"><%= pluralize podcast.episodes.size, 'Episode' %></p>
						</div>
					</li>
				<% end %>
			<% end %>
		</ul>

		<%= will_paginate @podcasts, previous_label: "Previous", next_label: "Next" %>
	</div>
</div>
